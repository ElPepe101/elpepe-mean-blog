<!DOCTYPE html>
<html data-ng-app="app" data-ng-strict-di>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-material-design/4.0.1/bootstrap-material-design.min.css" />
    <title>{{app.title}}</title>
    <style>
      .glyphicon-thumbs-up {
        cursor: pointer;
      }

      .post-text {
        font-size: 20px;
        margin-left: 10px;
      }

      .post-form {
        margin-top: 30px;
      }
    </style>
  </head>
  <body>
    <nav class=" avbar navbar-default pull-right" data-ng-controller="NavController as nav">
      <ul class="container nav navbar-nav">
        <li data-ng-show="li.show" data-ng-repeat="li in nav.links">
          <a data-ng-href="{{li.href}}" data-ng-click="li.click()">{{li.text}}</a>
        </li>
      </ul>
    </nav>

    <div class="container">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div data-ui-view></div>
        </div>
      </div>
    </div>

    <script type="text/javascript" src="js/app.min.js"></script>
  </body>
</html>
